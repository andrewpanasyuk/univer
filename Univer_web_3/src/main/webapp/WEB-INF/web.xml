<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Univer_web_3</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>GroupShowServlet</servlet-name>
		<servlet-class>com.andrewpanasyuk.controller.groupController.GroupShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GroupShowServlet</servlet-name>
		<url-pattern>/views/groups</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>StudentShowServlet</servlet-name>
		<servlet-class>com.andrewpanasyuk.controller.studentController.StudentShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentShowServlet</servlet-name>
		<url-pattern>/views/students</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>TeacherShowServlet</servlet-name>
		<servlet-class>com.andrewpanasyuk.controller.teacherController.TeacherShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TeacherShowServlet</servlet-name>
		<url-pattern>/views/teachers</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ScheduleShowServlet</servlet-name>
		<servlet-class>com.andrewpanasyuk.controller.scheduleController.ScheduleShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ScheduleShowServlet</servlet-name>
		<url-pattern>/views/schedules</url-pattern>
	</servlet-mapping>
</web-app>